{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@lib/*": ["./src/lib/*"],
      "@types/*": ["src/lib/types/*"]
    }
  }
}
